<resources>

    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="Theme.UIFabric">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme" parent="AppBaseTheme" />

    <style name="AppTransTheme" parent="AppTheme" />

    <style name="BaseDialogTitleTextAppearance" parent="Base.TextAppearance.AppCompat.Title">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BaseDialogWindowTitle" parent="Base.DialogWindowTitle.AppCompat">
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textAppearance">@style/BaseDialogTitleTextAppearance</item>
    </style>

    <style name="BaseAlertDialog" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowTitleStyle">@style/BaseDialogWindowTitle</item>
    </style>

    <style name="BaseAlertDialog.Bottom">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowMinWidthMajor">65%</item>
        <item name="android:windowMinWidthMinor">100%</item>
        <item name="android:windowAnimationStyle">@style/BottomDialogAnimation</item>
    </style>

    <style name="BaseAlertDialog.Bottom.Wide">
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
    </style>

    <style name="BottomDialogAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"></style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
